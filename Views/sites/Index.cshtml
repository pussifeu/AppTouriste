@model IEnumerable<AppTourist.Models.site>

@{
    ViewBag.Title = "Index";
}

<h3>Liste des sites</h3>

<p>
    @Html.ActionLink("Ajouter un nouveau site", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Nom du site
        </th>
        <th>
            Lieu du site
        </th>

        <th>
            Tarif du site
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lieu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarif)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
            <!--@Html.ActionLink("Details", "Details", new { id=item.Id }) |-->
            @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
